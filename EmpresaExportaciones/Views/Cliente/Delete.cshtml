@model EmpresaExportaciones.Models.Cliente

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container">
    <h1 class="text-center display-4">Eliminar</h1>

    <h3 class="text-center">¿Estás seguro de que quieres eliminar este Cliente?</h3>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.dniCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.dniCliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.nombreCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nombreCliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.apellidoCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.apellidoCliente)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-azul">Volver a la lista</a>
        </form>
    </div>
</div>

