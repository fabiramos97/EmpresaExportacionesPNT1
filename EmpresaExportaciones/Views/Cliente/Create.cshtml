@model EmpresaExportaciones.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="text-center display-4">Agregar Cliente</h1>
    <h5 class="text-center">Verifique que los datos sean correctos</h5>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="dniCliente" class="control-label"></label>
                    <input asp-for="dniCliente" class="form-control" />
                    <span asp-validation-for="dniCliente" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="nombreCliente" class="control-label"></label>
                    <input asp-for="nombreCliente" class="form-control" />
                    <span asp-validation-for="nombreCliente" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="apellidoCliente" class="control-label"></label>
                    <input asp-for="apellidoCliente" class="form-control" />
                    <span asp-validation-for="apellidoCliente" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <br />
                    <input type="submit" value="Agregar" class="btn btn-azul" />
                    <a asp-action="Index" class="btn btn-azul">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
