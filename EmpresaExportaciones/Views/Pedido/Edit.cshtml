@model EmpresaExportaciones.Models.Pedido

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <!-- Centra y agrega un poco de espacio en la parte superior -->
    <h1 class="text-center display-4">Editar Registro</h1>
    <h5 class="text-center">En esta sección se puede editar un registro</h5>
    <hr />
    <div class="row justify-content-center">
        <!-- Centra el contenido en la fila -->
        <div class="col-md-4">
            <form asp-action="Edit" onsubmit="return confirm('¿Desea guardar los cambios en este pedido?');" class="mx-auto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductoId" class="control-label"></label>
                    <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
                    <span asp-validation-for="ProductoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="cantProducto" class="control-label"></label>
                    <input asp-for="cantProducto" class="form-control" />
                    <span asp-validation-for="cantProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="precio" class="control-label"></label>
                    <input asp-for="precio" class="form-control" />
                    <span asp-validation-for="precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fecha" class="control-label"></label>
                    <input asp-for="fecha" class="form-control" />
                    <span asp-validation-for="fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="estado" class="control-label"></label>
                    <select asp-for="estado" class="form-control" asp-items="Html.GetEnumSelectList<Estado>()">
                        <option selected="selected" value="">Estado</option>
                    </select>
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br />
                    <input type="submit" value="Guardar" class="btn btn-azul" />
                    <a asp-action="Index" class="btn btn-azul">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}