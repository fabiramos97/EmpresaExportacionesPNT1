@model EmpresaExportaciones.Models.Pedido

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="text-center display-4">Agregar Pedido</h1>
    <h5 class="text-center">Verifique que los datos sean correctos</h5>
    <hr />

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ProductoId" class="control-label"></label>
                    <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="cantProducto" class="control-label"></label>
                    <input asp-for="cantProducto" class="form-control" />
                    <span asp-validation-for="cantProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="precio" class="control-label"></label>
                    <input asp-for="precio" class="form-control" />
                    <span asp-validation-for="precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fecha" class="control-label"></label>
                    <input asp-for="fecha" class="form-control" />
                    <span asp-validation-for="fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="estado" class="control-label"></label>
                    <select asp-for="estado" class="form-control" asp-items="Html.GetEnumSelectList<Estado>()">
                        <option selected="selected" value="">Estado</option>
                    </select>
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br />
                    <input type="submit" value="Agregar" class="btn btn-azul" />
                    <a asp-action="Index" class="btn btn-azul">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
