@model EmpresaExportaciones.Models.Pedido

@{
    ViewData["Title"] = "Details";
}
<div class="container mt-4">

    <h1 class="text-center display-4">Detalles del Registro</h1>
    <hr />

    <div>
        <h4 class="text-center">Pedido</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.apellidoCliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.cantProducto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.cantProducto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.precio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.precio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.estado)
            </dd>
        </dl>
    </div>
    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-azul">Editar</a> |
        <a asp-action="Index" class="btn btn-azul">Volver a la lista</a>
    </div>
</div>